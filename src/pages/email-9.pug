<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
html(lang="ru" xmlns="http://www.w3.org/1999/xhtml" xmlns:v="urn:schemas-microsoft-com:vml" xmlns:o="urn:schemas-microsoft-com:office:office" style="min-height: 100vh;")
	include include/head.pug
	+head('email-9')

	body(style="width: 100%; padding: 0; Margin: 0; min-height: 100vh;")
		include ../blocks-ui-components/ui-components-mixins.pug			
		include ../blocks/mixins.pug						
		<!-- BODY -->
		table(align="center" bgcolor=bg_table border="0" cellpadding="0" cellspacing="0" width="100%" style="min-height: 100vh;")
			tr 
				td(align="center" valign="top" style="vertical-align: top;")
					table(align="center" border="0" cellpadding="0" cellspacing="0" width="100%")
						tr
							+td-margin({height: mr_body })
						tr
							td(align="center")
								<!-- PREHEADERS STARTS -->
								+preheaders({preheaders1: true})
								<!-- PREHEADERS ENDS -->
						tr
							td(align="center")
								<!-- HEADER STARTS -->
								+header({header1: true})
								<!-- HEADER ENDS -->
						tr
							td(align="center")
								<!-- TITLE CONTENT STARTS -->
									+row({
										col: 1,
										bg_body: bg_body,
										body_pading_l: body_pading_l,
										body_pading_r: body_pading_r,
										body_width: body_width,
										rtl: false,
										margin_top: mr_mediumblue,
										margin_bottom: false,
										content: {
											name: 'text',
											arg: [
												{
													type: 'content',
													name: 'title',
													arg: {
														title: 'your order is ready'
													}
												},
												{
													type: 'margin',
													margin: mr_purpur
												},
												{
													type: 'text',
													class: 'text',
													text: 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. A, et non quis morbi duis ve tincidunt nibh. Pellentesque mi dictumst ut nibh curabitur dui sit viverra. Ut urna nec, eget felis eget lorem purus mattis.',
													alignment: 'center'
												},
												{
													type: 'margin',
													margin: mr_turquoise
												},
												{
													type: 'content',
													alignment: 'center',
													name: 'img-wraper',
													arg: {
														img: 'fashion-order-502-66-01.jpg',
														alt: 'order',
														width: 502,
														height: 66
													}
												}
											]
										}
									})
								<!-- TITLE CONTENT ENDS -->
						tr
							td(align="center")
								<!-- DESC-LIST STARTS -->
								+desc-list({})
								<!-- DESC-LIST ENDS -->
						tr
							td(align="center")
								<!-- TABLE-PRICE-HEAD STARTS -->
								+table-price({tablePriceHead: true})
								<!-- TABLE-PRICE-HEAD ENDS -->
						tr
							td(align="center")
								<!-- TABLE-PRICE-LIST STARTS -->
								+table-price({tablePriceList: true})
								<!-- TABLE-PRICE-LIST ENDS -->
						tr
							td(align="center")
								<!-- TABLE-PRICE-TOTAL STARTS -->
								+table-price({tablePriceTotal: true})
								<!-- TABLE-PRICE-TOTAL ENDS -->
						tr
							td(align="center")
								<!-- STORES STARTS -->
								+footer({})
								<!-- STORES ENDS -->
						tr
							+td-margin({height: mr_body })
		<!-- /BODY -->