	include include/head.pug
	+head('email-7')

	body(style="width: 100%; padding: 0; Margin: 0; min-height: 100vh")
		include ../blocks-ui-components/ui-components-mixins.pug			
		include ../blocks/mixins.pug						
		<!-- BODY -->
		table(align="center" bgcolor=bg_table border="0" cellpadding="0" cellspacing="0" width="100%" style="min-height: 100vh;")
			tr 
				td(align="center" valign="top" style="vertical-align: top;")
					table(align="center" border="0" cellpadding="0" cellspacing="0" width="100%")
						tr
							+td-margin({height: mr_body })
						tr
							td(align="center")
								<!-- PREHEADERS STARTS -->
								+preheaders({preheaders1: true})
								<!-- PREHEADERS ENDS -->
						tr
							td(align="center")
								<!-- HEADER STARTS -->
								+header({header2: true})
								<!-- HEADER ENDS -->
						tr
							td(align="center")
								<!-- MENU STARTS -->
								+row({
									col: 1,
									bg_body: bg_body,
									body_pading_l: body_pading_l,
									body_pading_r: body_pading_r,
									body_width: body_width,
									rtl: false,
									margin_top: false,
									margin_bottom: mr_darkblue,
									content: {
										name: 'menu',
										arg: {
											menu: true,
											link_1: 'men',
											link_2: 'women',
											link_3: 'accessories'
										}
									}
								})
								<!-- MENU ENDS -->
						tr
							td(align="center")
								<!-- TITLE CONTENT STARTS -->
									+row({
										col: 1,
										bg_body: bg_body,
										body_pading_l: body_pading_l,
										body_pading_r: body_pading_r,
										body_width: body_width,
										rtl: false,
										margin_top: false,
										margin_bottom: mr_mediumblue,
										content: {
											name: 'text',
											arg: [
												{
													type: 'content',
													name: 'img-wraper',
													arg: {
														img: 'fashion-img-502-334-01.jpg',
														alt: '70% off', 
														width: 502 ,
														height: 334
													}
												},
												{
													type: 'margin',
													margin: mr_blue
												},
												{
													type: 'content',
													name: 'title',
													arg: {
														title: 'welcome to our store'
													}
												},
												{
													type: 'margin',
													margin: mr_purpur
