												}
											]
										}
									})
								<!-- TITLE CONTENT ENDS -->
						tr
							td(align="center")
								<!-- CTA STARTS -->
								+advantage-list({advantageList: true})
								<!-- CTA CONTENT ENDS -->
						tr
							td(align="center")
								<!-- STORES CONTENT STARTS -->
								+stores({
									margin_top: 0,
									margin_bottom: mr_blue
								})
								<!-- STORES CONTENT ENDS -->
						tr
							td(align="center")
								<!-- STORES STARTS -->
								+footer({})
								<!-- STORES ENDS -->
						tr
							+td-margin({height: mr_body })
